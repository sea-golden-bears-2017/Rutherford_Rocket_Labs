<!DOCTYPE html>
<html>
  <head>
    <title>RutherfordInventory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'style', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Oswald:700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Slabo+27px" rel="stylesheet">
  </head>

  <body>
    <header>
      <div class="banner-logo">
        <h1 id="main-logo">
          <a href="/home">
            <%= image_tag "rutherford-rockets.png" %>
          </a>
        </h1>
      </div><!-- end banner logo -->
      <% unless current_page?(login_path) %>
      <nav id="layout-header">
        <% if !logged_in? %>
        <!-- <ul>
          <li>
            <%= link_to "Login", root_path %>
          </li>
        </ul> -->
        <% else %>
          <ul>
            <li>
              Hello, <%= employee_logged_in.first_name %> |
            </li>
            <li>
              <%= button_to "Logout", {action: "destroy", controller: "sessions"}, {method: :delete, class: "logout"} %>
            </li>
          </ul>
          <% if manager_logged_in? %>
          <nav id="manager-nav">
            <ul>
              <li>
                <%= link_to "Add Employee", new_employee_path %>
              </li>
              <li>
                <%= link_to "Add Warehouse", new_warehouse_path %>
              </li>
            </ul>
          </nav>
          <% end %>
        <% end %><!-- end unless -->
      </nav>
      <% end %>
    </header>
    <%= yield %>
    <!-- <footer> -->
      <!-- <p>Martian Huggers, LLC all rights reserved</p>
    </footer> -->
  </body>
</html>
